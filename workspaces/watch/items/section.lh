    .heading {
        font-size: 28px;
        margin-left: 5px;
        margin-bottom: 10px;
    }
    .heading::before{
        width: 50px;
    }
    .lh-items-name{
        font-size: 12px;
        margin-bottom: 5px;
    }
    .lh-text{
        padding: 0 15px;
    }
    .lh-items-desc{
        font-size: 16px;
