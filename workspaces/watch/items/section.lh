    }
    .lh-col-md-4{
        max-width: 100%;
        height: auto;
    }
    .lh-items{
        margin-bottom: 10px;
    }
    .lh-items-name{
        font-size: 14px;
    }
    .lh-items-desc{
        font-size: 18px;
    }
    .lh-items-icon{
        width: 30px;
        height: 30px;
    }
    .lh-col-icon{
        font-size: 16px;
    }
    .heading{
        font-size: 25px;
        margin-bottom: 10px;
    }
    .heading::before{ display: none;}
}
