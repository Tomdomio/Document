<style>
.lh-col-icon{
    font-size: 14px;
    color: black;
    display: flex;
    gap: 0 12px;
    margin-bottom: 24px;
}
.lh-items-icon{
    width: 30px;
    height: 30px;
    background-color: white;
    border-radius: 50%;
    align-items: center;
    justify-content: center;
    display: flex;
}
.lh-items-icon i{
    color: #000;
}
.lh-container{
    margin-bottom: 100px;
}
.lh-row{
    gap: 26px 0;
}
.lh-items{
