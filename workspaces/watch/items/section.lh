        width: 20px;
        height: 20px;
    }
    .lh-container{
        margin-bottom: 50px;
    }
    .lh-items img{
        min-height: 315px;
    }
}
@media (max-width: 480px){
    .lh-row{
        display: block;
    }
    .lh-container{
        height: auto;
    }
    .lh-items img{
