                    </div>
                    <p class="lh__text-content" v-html="lang(settings.content)"></p>
                    <div class="lh__text-button">
                        <a class="lh__text-btn" v-html="lang(settings.cta)"></a>
                    </div>
                </div>
                <div class="lh__image lh-col-md-7" v-html="lang(settings.prod)"></div>
            </div>
        </div>
	</div>
</template>
<style lang="scss">
// variable
    $color-text: #fff;

//sass
    .lh-row{
        align-items: center;
    }
    .lh__text{
        margin: 137px 0;
        &-heading{
            color: $color-text;
            font-size: 60px;
            font-weight: bold;
            line-height: 76px;
            margin-bottom: 34px;
        }
        &-star{
            margin-bottom: 16px;
            &--item{
                margin-right: 3.33px;
                color: #FFE600;
                font-size: 12px;
            }
            &--desc{
                margin-left: 1.5px;
                color: $color-text;
                font-family: "DM Sans";
                font-style: normal;
                font-weight: 500;
                letter-spacing: 0.4;
                font-size: 15px;
                line-height: 24px;
            }
        }
        &-content{
            font-family: "DM Sans";
            font-style: normal;
            font-weight: normal;
            font-size: 15px;
            line-height: 24px;
            opacity: 0.6;
            color: $color-text;
            margin-bottom: 38px;
            letter-spacing: 0.49px;
        }
        &-btn{
            display: flex;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: bold;
            font-size: 16px;
            padding: 14.5px 0;
            cursor: pointer;
            letter-spacing: 0.1;
            max-width: 270px;
            background-color: #1E262D;
            border-radius: 10px;
            box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
            transition: all 0.3s linear;
            & a{
                color: $color-text;
                cursor: pointer;
            }
            &:hover{
                background-color: #64646499;
                transition: all 0.3s linear;
            }
        }
    }
@media (max-width: 991px){
    .lh__text{
        margin: unset;
        &-heading{
            font-size: 60px;
            line-height: 76px;
            margin-bottom: 30px;
        }
    }
    .lh-col-md-5{
        max-width: 100%;
        flex: 100%;
    }
    .lh-col-md-7{
        max-width: 100%;
        flex: 100%;
    }
    .lh__text-btn{
        margin-bottom: 60px;
    }
}
@media (max-width: 480px){
    .lh__text{
        &-heading{
            font-size: 40px;
            line-height: 52px;
            letter-spacing: -0.9;
        }
        &-content{
            margin-bottom: 35px;
        }
    }
    .lh-col-md-8{
        max-width: 85.666667%;
    }
}
</style>