@javascript
let auto = false;
let loop = false;
let	time = settings.timeout;
if(time.indexOf('s')  != -1){
  var time_out = time.replace('s', '');
  time_out = time_out*1000;
}
if(settings.loop == 'yes'){
  loop = true
}
if(settings.auto == 'yes'){
  auto = {
    delay:time_out
  }
}
var $this = jQuery(this);
function initSlides(){
var swiper = new Swiper($this.find('.slider')[0], {
    loop:loop,
    autoplay:auto,
    heightAuto: true,
    navigation: {
      nextEl: $this.find('.swiper-bt-next')[0],
      prevEl: $this.find('.swiper-bt-prev')[0]
    },
    pagination: {
        el: $this.find('.swiper-pagination')[0],
        clickable: true,
    }
    ,
    breakpoints: {
        480: {
          slidesPerView: 1,
          spaceBetween: 10,
        },
        767: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        992: {
          slidesPerView: 2,
          spaceBetween: 30,
        }
      }
  });
};

if(window.Swiper && settings.group_1.length){
  initSlides();
}
@endjavascript
