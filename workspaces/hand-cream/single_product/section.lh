    "configs": {
        "desktop":{
            "background":{
		        "color": "#251F42",
                "image": "",
                "position": "center center",
                "repeat": "no-repeat",
                "size": "cover"
            },
            "section_box":{
                "padding":{
                    "top":"100px",
                    "bottom":"160px"
                }
            }
        },
        "tablet":{
